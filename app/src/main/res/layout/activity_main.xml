<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/main_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voto Online"
        android:textSize="32sp"
        android:layout_centerHorizontal="true"
        />


    <RadioGroup
        android:id="@+id/grupoRadios"
        android:layout_width="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@id/main_txt_title"
        android:layout_marginStart="90dp"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nulo" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gabriel Boric" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jose Antonio Kast" />
    </RadioGroup>


    <Button
        android:id="@+id/id_votar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/grupoRadios"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="140dp"
        android:onClick="votar"

        android:text="        Votar          " />

    <Button
        android:id="@+id/main_create_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_votar"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="140dp"
        android:onClick="verResultados"

        android:text="Ver Resultados" />


</RelativeLayout>